			<artifactId>basic-plugins</artifactId>
			<version>2.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.tcrun.plugins</groupId>
			<artifactId>htmlreport</artifactId>
			<version>2.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
